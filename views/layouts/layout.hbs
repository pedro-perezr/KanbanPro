<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{titulo}} | KanbanPro</title>
  <link rel="stylesheet" href="/css/styles.css">

  <!-- Este script va en el HEAD para evitar el flash blanco al navegar -->
  <script>
    if (localStorage.getItem('modo') === 'oscuro') {
      document.documentElement.classList.add('dark-early');
    }
  </script>
</head>
<body>

  <nav class="navbar">
    <div class="navbar-brand">
      <a href="/">KanbanPro</a>
    </div>
    <ul class="navbar-links">
      <li><a href="/">Inicio</a></li>
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/login">Iniciar Sesion</a></li>
      <li><a href="/register" class="btn-nav">Registrarse</a></li>
    </ul>
  </nav>

  <main class="main-content">
    {{{body}}}
  </main>

  <footer class="footer">
    <p>KanbanPro &copy; 2026 - Pedro P√©rez</p>
  </footer>

  <!-- Boton flotante modo oscuro -->
  <button class="btn-modo-flotante" onclick="toggleModo()" id="btnModo" title="Modo oscuro">
    üåô
  </button>

  <script>
    // Sincronizar el icono del boton con el estado actual
    if (localStorage.getItem('modo') === 'oscuro') {
      document.body.classList.add('dark');
      document.getElementById('btnModo').textContent = '‚òÄÔ∏è';
    }

    function toggleModo() {
      var body = document.body;
      var html = document.documentElement;
      var btn = document.getElementById('btnModo');
      if (body.classList.contains('dark')) {
        body.classList.remove('dark');
        html.classList.remove('dark-early');
        btn.textContent = 'üåô';
        localStorage.setItem('modo', 'claro');
      } else {
        body.classList.add('dark');
        html.classList.add('dark-early');
        btn.textContent = '‚òÄÔ∏è';
        localStorage.setItem('modo', 'oscuro');
      }
    }
  </script>

</body>
</html>